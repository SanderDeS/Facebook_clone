<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>


<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="facebook.FacebookController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label prefWidth="70.0" text="Your name" />
            <TextField fx:id="username" prefHeight="27.0" prefWidth="200.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Line endX="200.0" layoutX="111.0" layoutY="232.0" startX="-100.0" stroke="#cccccc" />
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Add a message" underline="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="70.0" text="Message" />
                  <TextField fx:id="message" alignment="TOP_LEFT" prefHeight="0.0" prefWidth="200.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addMessage" text="Post message" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Line endX="200.0" startX="-100.0" stroke="#cccccc" />
      <VBox layoutX="10.0" layoutY="47.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Add a photo" underline="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefWidth="70.0" text="File name" />
                  <TextField fx:id="filename" prefHeight="0.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="47.0" spacing="10.0">
               <children>
                  <Label prefWidth="70.0" text="Caption" />
                  <TextField fx:id="caption" prefHeight="0.0" prefWidth="200.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#addPhoto" text="Post photo" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Line endX="200.0" layoutX="111.0" layoutY="243.0" startX="-100.0" stroke="#cccccc" />
      <VBox layoutX="10.0" layoutY="170.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Choose a post" underline="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ComboBox fx:id="posts" prefWidth="280.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="47.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#like" text="Like" />
                  <Button mnemonicParsing="false" onAction="#unlike" text="Unlike" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="84.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#comment" text="Comment" />
                  <TextField fx:id="comment" prefHeight="27.0" prefWidth="193.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Line endX="200.0" layoutX="111.0" layoutY="319.0" startX="-100.0" stroke="#cccccc" />
      <HBox prefWidth="200.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#printPosts" text="Print all posts" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
